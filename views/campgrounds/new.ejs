<% layout('/layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" placeholder="Title" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" placeholder="Location" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" placeholder="Image Url" id="image" name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="" aria-describedby="price-label" name="campground[price]" min="0">
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" placeholder="Write a description about your camp!" id="description" name="campground[description]"></textarea>
            </div>
            <div class="mb-3 d-inline">
                <button class="btn btn-success">Add A Campground</button></div>
                <a class="btn btn-primary" href="/campgrounds">Back to Campgrounds</a>
            </div>
        </form>
    </div>
</div>
