<% layout('/layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validation-required"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" placeholder="Title" id="title" name="campground[title]"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" placeholder="Location" id="location"
                        name="campground[location]" required>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text text-muted" for="image">Add Images</label>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" placeholder="0.00" aria-label=""
                            aria-describedby="price-label" name="campground[price]" min="0" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" placeholder="Write a description about your camp!"
                        id="description" name="campground[description]" required></textarea>
                </div>
                <div class="mb-3 d-inline">
                    <button class="btn btn-success">Add A Campground</button>
                </div>
                <a class="btn btn-primary" href="/campgrounds">Back to Campgrounds</a>
        </div>
        </form>
    </div>
    </div>